#!/bin/bash
# log sender. ~six

server="Â¤ tourmaline"
echo -e "${server}:\n _sending logs..."

if [[ -z "$sf_mac" ]] 
then
  echo "_ 'sf_mac' undefined. expecting {path}"
  exit
else
  cd $sf_mac
  sf_safe=$(./safe.sh "safe")
  sf_edit=$(./safe.sh "edit")
  sf_one=$(./safe.sh "one") 
fi

echo "_ verifying file..."
